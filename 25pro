class Student {

    String name;
    int age;

    // 1️⃣ No-argument constructor
    Student() {
        name = "Unknown";
        age = 0;
    }

    // 2️⃣ Constructor with name only
    Student(String n) {
        name = n;
        age = 0;
    }

    // 3️⃣ Constructor with name and age
    Student(String n, int a) {
        name = n;
        age = a;
    }

    // Method to display student details
    void display() {
        System.out.println("Name: " + name);
        System.out.println("Age : " + age);
        System.out.println();
    }

    // Main method
    public static void main(String[] args) {

        // Using no-args constructor
        Student s1 = new Student();
        s1.display();

        // Using constructor with name only
        Student s2 = new Student("Alice");
        s2.display();

        // Using constructor with name and age
        Student s3 = new Student("Bob", 20);
        s3.display();
    }
}
