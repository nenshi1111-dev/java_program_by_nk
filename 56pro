import java.util.Scanner;

public class ThrowDemo {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        try {
            System.out.print("Enter a number to calculate square root: ");
            double num = sc.nextDouble();

            // Throw exception if number is negative
            if (num < 0) {
                throw new IllegalArgumentException("Negative number not allowed for square root");
            }

            // Calculate square root
            double sqrt = Math.sqrt(num);
            System.out.println("Square root of " + num + " = " + sqrt);
        }
        catch (IllegalArgumentException e) {
            System.out.println("Error: " + e.getMessage());
        }

        System.out.println("Program continues normally...");
    }
}



